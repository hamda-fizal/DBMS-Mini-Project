<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Appointment Details</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@3.3.7/dist/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
  <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta/css/bootstrap.min.css" rel="stylesheet" />

</head>

<body>

  <div class="container">

    <form id="apform" class="mt-5" method="post" name="apsubmit">
      <big>
        <div class="form-group">

          <label class="col-sm-2 control-label " for="ptname">Patient Name:</label>
          <div class="col-sm-10">
            <input class="form-control" type="text" id="ptname" name="ptname" value=""><br>

          </div>
        </div>
        <div class="form-group">

          <label class="col-sm-2 control-label " for="drname">Doctor Name:</label><br>
          <div class="col-sm-10">
            <input class="form-control" type="text" id="drname" name="drname"><br>

          </div>

        </div>

        <div class="form-group">

          <label class="col-sm-2 control-label " for="date">Date of Appointment:</label><br>
          <div class="col-sm-10">

            <input type="date" id="date" class="form-control" name="date"><br><br>
          </div>
        </div>
          <div class="col-sm-offset-2 col-sm-10">
        <input type="submit" value="Submit">
      </div>
      </big>
    </form>
  </div>
  <br><br>

<big>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Appointment Number</th>
        <th>Patient ID</th>
        <th>Doctor ID</th>
        <th>Appointment Date</th>
      </tr>
    </thead>

    <tbody>
      <% apList.forEach(ap =>{ %>
      <tr>
        <th><%= ap.appointmentNo %></th>
        <th><%= ap.patientId %></th>
        <th><%= ap.doctorId %></th>
        <th><%= String(ap.appointmentDate).substring(4, 15) %></th>
      </tr>
      <% }) %>
    </tbody>

  </table><br><br>

  <a class="col-lg-12" style="text-align:center" href="/">Go back</a>

</big>

</body>

</html>
